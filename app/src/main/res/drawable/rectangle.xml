<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:state_pressed="false" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange" /> <!-- Light Orange Color with reduced opacity -->
            <corners android:radius="8dp" /> <!-- Rounded corners, adjust radius as needed -->
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange" /> <!-- Lighter Orange Color when pressed with reduced opacity -->
            <corners android:radius="8dp" /> <!-- Rounded corners, adjust radius as needed -->
        </shape>
    </item>
    <!-- Focused state -->
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange" /> <!-- Same as normal state with reduced opacity -->
            <stroke android:color="@color/orange" android:width="2dp" /> <!-- Orange border when focused with reduced opacity -->
            <corners android:radius="8dp" /> <!-- Rounded corners, adjust radius as needed -->
        </shape>
    </item>
</selector>